# Server Configuration
PORT=8080

# MongoDB Connection
# For Docker: mongodb://mongo:27017/movieticketdb
# For local: mongodb://localhost:27017/movieticketdb
MONGODB_URI=mongodb://mongo:27017/movieticketdb

# JWT Secret for authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=your_secure_jwt_secret_key_here_change_this

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Email Configuration (Gmail SMTP with App Password)
# Generate app password: https://myaccount.google.com/apppasswords
GMAIL_USER=your_email@gmail.com
GMAIL_PASSWORD=your_app_password_here

# Node Environment
NODE_ENV=production
